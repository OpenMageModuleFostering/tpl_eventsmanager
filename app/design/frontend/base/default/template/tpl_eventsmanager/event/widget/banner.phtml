<?php
$_events = Mage::getModel('tpl_eventsmanager/event')->getAllEvents();
$time = microtime();
$time = str_replace(' ', '', $time);
?>
<div class="banner-slider-tile" id="events-banner-slider_<?php echo $time; ?>" style="height: 270px;">    
    <?php
    $flag = 0;
    foreach ($_events as $_event) :
        ?>

        <?php
        $curdate = strtotime(date('Y-m-d 00:00:00'));
        $end_date = strtotime($_event->getEndDate());
        ?>
        <?php if (($curdate <= $end_date) && (!empty($_event->getBanner()))): ?>

            <a href="<?php echo $_event->getEventUrl() ?>">
                <img alt="<?php echo $_event->getEventName(); ?>" title="<?php echo $_event->getEventName(); ?>" style="display:<?php
                if ($flag == 0) {
                    echo 'initial';
                } else {
                    echo 'none';
                }
                ?>; max-width:100%; max-height: 250px;" class="event-thumbnail" src="<?php echo Mage::helper('tpl_eventsmanager/event_image')->init($_event, 'banner'); ?>" alt="<?php echo $this->escapeHtml($_event->getEventName()); ?>" /></a>

            <?php
            $flag = 1;
        endif;
        ?>

<?php endforeach; ?>
</div>  

<script>
    window.onload = shuffle_banners();

    function shuffle_banners() {
        var banner_div = document.getElementById('events-banner-slider_<?php echo $time; ?>');
        var all_images = banner_div.getElementsByTagName("img");

        var len = all_images.length;
        console.log(all_images);
        var index = 0;
        setInterval(function () {
            if (index != 0)
            {
                all_images[index - 1].style.display = "none";
            }
            if (index > (len - 1))
            {
                index = 0;
            }
            all_images[index].style.display = "initial";

            index++;
        }, 2000);

    }
</script>

<style>
    .banner-slider-tile {
        margin-top: 20px;
