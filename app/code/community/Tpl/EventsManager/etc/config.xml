<config>
    <modules>
        <Tpl_EventsManager>
            <version>1.0.2</version>
        </Tpl_EventsManager>
    </modules>
    <global>
        <resources>
            <tpl_eventsmanager_setup>
                <setup>
                    <module>Tpl_EventsManager</module>
                    <class>Tpl_EventsManager_Model_Resource_Setup</class>
                </setup>
            </tpl_eventsmanager_setup>
        </resources>
        <blocks>
            <tpl_eventsmanager>
                <class>Tpl_EventsManager_Block</class>
            </tpl_eventsmanager>
        </blocks>
        <helpers>
            <tpl_eventsmanager>
                <class>Tpl_EventsManager_Helper</class>
            </tpl_eventsmanager>
        </helpers>
        <models>
            <tpl_eventsmanager>
                <class>Tpl_EventsManager_Model</class>
                <resourceModel>tpl_eventsmanager_resource</resourceModel>
            </tpl_eventsmanager>
            <tpl_eventsmanager_resource>
                <class>Tpl_EventsManager_Model_Resource</class>
                <entities>
                    <event>
                        <table>tpl_eventsmanager_event</table>
                    </event>
                    <invitationstatus>
                        <table>tpl_eventsmanager_invitationstatus</table>
                    </invitationstatus>
                    <event_product>
                        <table>tpl_eventsmanager_event_product</table>
                    </event_product>
                    <event_comment>
                        <table>tpl_eventsmanager_event_comment</table>
                    </event_comment>
                    <invitationstatus_comment>
                        <table>tpl_eventsmanager_invitationstatus_comment</table>
                    </invitationstatus_comment>
                    <event_comment_store>
                        <table>tpl_eventsmanager_event_comment_store</table>
                    </event_comment_store>
                    <invitationstatus_comment_store>
                        <table>tpl_eventsmanager_invitationstatus_comment_store</table>
                    </invitationstatus_comment_store>
                    <eav_attribute>
                        <table>tpl_eventsmanager_eav_attribute</table>
                    </eav_attribute>
                </entities>
            </tpl_eventsmanager_resource>
        </models>
        <events>
            <controller_front_init_routers>
                <observers>
                    <tpl_eventsmanager>
                        <class>Tpl_EventsManager_Controller_Router</class>
                        <method>initControllerRouters</method>
                    </tpl_eventsmanager>
                </observers>
            </controller_front_init_routers>
        </events>
        <template>
		<email>
			<customer_invitation_mail module="customer_invitation_mail">
				<label>Customer Invitation mail</label>
				<file>tpl_eventmanager_customer_invitation_mail.html</file>
				<type>html</type>
			</customer_invitation_mail>
		</email>
	</template>
        <template>
		<email>
			<event_cancel_mail module="event_cancel_mail">
				<label>Event Cancel mail</label>
				<file>tpl_eventmanager_event_cancel_mail.html</file>
				<type>html</type>
			</event_cancel_mail>
		</email>
	</template>
    </global>
    <adminhtml>
        <layout>
            <updates>
                <tpl_eventsmanager>
                    <file>tpl_eventsmanager.xml</file>
                </tpl_eventsmanager>
            </updates>
        </layout>
        <translate>
            <modules>
                <Tpl_EventsManager>
                    <files>
                        <default>Tpl_EventsManager.csv</default>
                    </files>
                </Tpl_EventsManager>
            </modules>
        </translate>
        <events>
            <core_block_abstract_prepare_layout_after>
                <observers>
                    <tpl_eventsmanager_event_product>
                        <type>singleton</type>
                        <class>tpl_eventsmanager/adminhtml_observer</class>
                        <method>addProductEventBlock</method>
                    </tpl_eventsmanager_event_product>
                </observers>
            </core_block_abstract_prepare_layout_after>
            <catalog_product_save_after>
                <observers>
                    <tpl_eventsmanager_event_product>
                        <type>singleton</type>
                        <class>tpl_eventsmanager/adminhtml_observer</class>
                        <method>saveProductEventData</method>
                    </tpl_eventsmanager_event_product>
                </observers>
            </catalog_product_save_after>
        </events>
        <global_search>
            <event>
                <class>tpl_eventsmanager/adminhtml_search_event</class>
                <acl>tpl_eventsmanager</acl>
            </event>
            <invitationstatus>
                <class>tpl_eventsmanager/adminhtml_search_invitationstatus</class>
                <acl>tpl_eventsmanager</acl>
            </invitationstatus>
        </global_search>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Tpl_EventsManager before="Mage_Adminhtml">Tpl_EventsManager_Adminhtml</Tpl_EventsManager>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <frontend>
        <routers>
            <tpl_eventsmanager>
                <use>standard</use>
                <args>
                    <module>Tpl_EventsManager</module>
                    <frontName>tpl_eventsmanager</frontName>
                </args>
            </tpl_eventsmanager>
        </routers>
        <layout>
            <updates>
                <tpl_eventsmanager>
                    <file>tpl_eventsmanager.xml</file>
                </tpl_eventsmanager>
            </updates>
        </layout>
        <translate>
            <modules>
                <Tpl_EventsManager>
                    <files>
                        <default>Tpl_EventsManager.csv</default>
                    </files>
                </Tpl_EventsManager>
            </modules>
        </translate>
        <events>
        <page_block_html_topmenu_gethtml_before>
            <observers>
                <Tpl_EventsManager>
                    <class>tpl_eventsmanager/observer</class>
                    <method>addItemsToTopmenuItems</method>
                </Tpl_EventsManager>
            </observers>
        </page_block_html_topmenu_gethtml_before>
        </events>
        
        
    </frontend>
    <default>
        <tpl_eventsmanager>
            <event>
                <breadcrumbs>1</breadcrumbs>
                <allow_comment>1</allow_comment>
                <rss>1</rss>
                <meta_title>Events</meta_title>
            </event>
            <invitationstatus>
                <breadcrumbs>1</breadcrumbs>
                <allow_comment>1</allow_comment>
                <rss>1</rss>
                <meta_title>Invitations Status</meta_title>
            </invitationstatus>
        </tpl_eventsmanager>
    </default>
</config>
